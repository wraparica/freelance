<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/categories">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/final_logo" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/game"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/game" />
            <ImageView
                android:id="@+id/vocabulary"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/vocabulary" />

            <ImageView
                android:id="@+id/music"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/music" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/speech_to_speech"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/speech_to_speech" />
            <ImageView
                android:id="@+id/video"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/video" />
            <ImageView
                android:id="@+id/pronunciation"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                tools:src="@drawable/pronunciation" />


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>